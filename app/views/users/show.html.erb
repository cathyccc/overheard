<!-- temporary user info text -->
<div class = "col-md-12">
  <h2><%= current_user.email %></h2>
</div>

<div class = "col-md-8">
  <div>
    <h3>Add Term</h3>
    <%= form_for @tracked_term do |f| %>
      <%= f.text_field :term %>
      <%= f.submit "Add Track Term" %>
    <% end %>
  </div>

  <div>
    <% @tracked_terms.each do |entry| %>
      <h4>#<%= entry.term %></h4>
      <% tweets = Tweet.get_tweets(entry.term)%>
      <% tweets.each do |tweet| %>
        <p>
          <%= tweet.text %>
        </p>
      <% end %>

      <%= link_to "Stop Tracking", tracked_term_path(entry.id), method: :delete %>
    <% end %>
  </div>
</div>

<div class="col-md-4">
  <div>
    <h3>Search</h3>
    <%= form_tag(profile_path, method: :get) do%>
    <%= text_field_tag(:query, params[:query]) %>
    <%= submit_tag("Search") %>
    <% end %>
  </div>

  <div>
    <h4>Search Result</h4>
    <% @tweets.each do |tweet| %>
    <p><%= tweet.text %></p>
    <% end %>
  </div>
</div>

<div class="col-md-12">
  <!-- temp styling -->
  <br>
  <br>
  <p>
    <%= link_to "Back", root_path %>
  </p>
</div>
